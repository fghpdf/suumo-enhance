{
  "name": "Suumo Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://suumo.jp/"],
  "web_accessible_resources": [
    {
      "resources": [ "*.png" , "*.svg"],
      "matches": [ "https://suumo.jp/*" ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://suumo.jp/*"],
      "js": ["content.js"]
    }
  ]
}